{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://jsonschema.net",
  "required": true,
  "properties": {
    "apiVersion": {
      "type": "string",
      "required": true,
      "enum": [ "v1alpha1" ]
    },
    "items": {
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "apiVersion": {
            "type": "string",
            "required": true
          },
          "kind": {
            "type": "string",
            "required": true,
            "enum": [ "Application" ]
          },
          "metadata": {
            "type": "object",
            "required": true,
            "properties": {
              "name": {
                "type": "string",
                "required": true
              },
              "app_version": {
                "type": "string",
                "required": true
              },
              "chart_version": {
                "type": "string",
                "required": true
              },
              "description": {
                "type": "string",
                "required": true
              }
            }
          }
        }
      }
    }
  }
}