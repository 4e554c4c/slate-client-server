{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha1" ]
    },
    "kind": {
      "type": "string",
      "enum": [ "Configuration" ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "revision": {
          "type": "number"
        },
        "updated": {
          "type": "string"
        },
        "application": {
          "type": "string"
        },
        "vo": {
          "type": "string"
        }
      },
      "required": ["id","name","revision","update","application","vo"]
    },
    "status": {
      "type": "object",
      "properties": {
        "phase": {
          "type": "string",
          "enum": ["DEPLOYED"]
        }
      },
      "required": ["phase"]
    }
  },
  "required": ["apiVersion","kind","metadata","status"]
}